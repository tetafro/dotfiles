{
    "breadcrumbs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        100
    ],
    "editor.snippetSuggestions": "top",
    "editor.wordWrap": "on",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".go",
                "isAsync": false,
                "cmd": "gofumports -w ${file}"
            }
        ]
    },
    "explorer.openEditors.visible": 0,
    "extensions.ignoreRecommendations": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "gitblame.infoMessageFormat": "${time.custom,YYYY-MM-DD} ${commit.summary} [${commit.hash_short, 8}]",
    "go.buildOnSave": "package",
    "go.buildTags": "e2e",
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "go.formatTool": "gofmt",
    "go.formatFlags": [
        "-s"
    ],
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--config=${workspaceFolder}/.golangci.yml",
        "--fast"
    ],
    "go.toolsEnvVars": {
        "GO111MODULE": "on",
        "GOFLAGS": "-mod=vendor"
    },
    "go.useLanguageServer": true,
    "partialDiff.commandsOnContextMenu": {
        "diffSelectionWithClipboard": false,
        "diffVisibleEditors": false,
        "togglePreComparisonTextNormalizationRules": false
    },
    "partialDiff.enableTelemetry": false,
    "python.formatting.provider": "none",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    "python.linting.pylintEnabled": false,
    "todohighlight.keywords": [
        {
            "text": "NOTE:",
            "color": "white",
            "backgroundColor": "rgb(200, 160, 50)"
        },
        {
            "text": "WARNING:",
            "color": "white",
            "backgroundColor": "rgb(200, 160, 50)"
        },
        {
            "text": "CAUTION:",
            "color": "white",
            "backgroundColor": "rgb(200, 160, 50)"
        },
        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "rgb(190, 80, 80)"
        }
    ],
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        // Theme: Tomorrow Night
        // "statusBar.background": "#303030",
        // "statusBar.noFolderBackground": "#222225",
        // "statusBar.debuggingBackground": "#511f1f",
        // "editorRuler.foreground": "#333333",
        // "editorIndentGuide.background": "#333333",
        // "editor.selectionHighlightBackground": "#333333ee"
        // Theme: Tomorrow
        "activityBar.background": "#efefef",
        "activityBar.foreground": "#555555",
        "statusBar.background": "#efefef",
        "statusBar.foreground": "#555555",
        "statusBar.debuggingBackground": "#efefef"
    },
    // "workbench.colorTheme": "Tomorrow Night",
    "workbench.colorTheme": "Tomorrow",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.renderIndentGuides": "none"
}
